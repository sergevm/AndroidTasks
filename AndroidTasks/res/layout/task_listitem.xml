<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="wrap_content"
	android:orientation="horizontal">
	
	<ImageView android:id="@+id/item_icon" style="@style/ListTaskIcon"/>
	
	<LinearLayout android:layout_width="wrap_content"
		android:layout_weight="1" 
		android:layout_height="wrap_content"
		android:orientation="vertical">

	<TextView xmlns:android="http://schemas.android.com/apk/res/android" 
		style="@style/ListDescription" android:id="@+id/item_description">
	</TextView>
	<LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
		android:layout_height="wrap_content" >

		<TextView xmlns:android="http://schemas.android.com/apk/res/android"
			style="@style/ListTargetDate" android:id="@+id/item_targetdate">
		</TextView>
		
		<TextView android:id="@+id/item_nextreminder" style="@style/ListReminderDate"/>
		
	</LinearLayout>
		
	</LinearLayout>
</LinearLayout>
